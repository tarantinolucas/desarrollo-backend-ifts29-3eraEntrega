mixin sidebar(user, activePage)
  //- Definir homeHref para el link de "Inicio"
  - var homeHref = '/'
  if user && user.role === 'Medico'
    - homeHref = '/dashboard/medico'
  else if user && user.role === 'Paciente'
    - homeHref = '/dashboard/paciente'
  else
    - homeHref = '/'

  .sidebar(class=(user && user.role === 'Administrativo') ? 'admin' : (user && user.role === 'Medico') ? 'medico' : (user && user.role === 'Paciente') ? 'paciente' : '')
    
    //- --- (MODIFICADO) El logo ahora es un ícono ---
    .logo
      i.fas.fa-star-of-life

    nav
      a(href=homeHref title='Inicio' class=(activePage === 'inicio' ? 'active' : ''))
        i.fas.fa-house
      if !user || user.role === 'Administrativo'
        a(href='/pacientes' title='Pacientes' class=(activePage === 'pacientes' ? 'active' : ''))
          i.fas.fa-user-injured
        a(href='/medicos' title='Médicos' class=(activePage === 'medicos' ? 'active' : ''))
          i.fas.fa-user-md
        a(href='/turnos' title='Turnos' class=(activePage === 'turnos' ? 'active' : ''))
          i.fas.fa-calendar-check
        if user && user.role === 'Administrativo'
          a(href='/usuarios' title='Usuarios' class=(activePage === 'usuarios' ? 'active' : ''))
            i.fas.fa-users-cog
      else if user && user.role === 'Medico'
        a(href='/pacientes' title='Pacientes' class=(activePage === 'pacientes' ? 'active' : ''))
          i.fas.fa-user-injured
      else if user && user.role === 'Paciente'
        a(href='/turnos' title='Turnos' class=(activePage === 'turnos' ? 'active' : ''))
          i.fas.fa-calendar-check